<%- include("partials/header"); -%>

<h1>HOME</h1>
<div class="row">
<%  posts.reverse().forEach(function(post){ %>

  <div class="col-lg-3 col-md-6">
    <div class="card mb-4" >
      <div class="card-body">
        <h4 class="title card-header"><%=post.title%></h4>
        </h5>
        <p class="content card-text"><%=post.content.substring(0, 100) + " ..."%></p>
        <a href="/posts/<%=post._id%>" class="card-link">Read More</a>
      </div>
    </div>
  </div>
<% }) %>
</div>
<br>
<center><button onclick="document.location='compose'" type="button" class="btn btn-light btn-lg">Compose</button></center>
